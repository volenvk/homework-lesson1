<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center"
              android:padding="6dp"
              tools:background="@color/black"
              android:background="?android:attr/selectableItemBackground">
    
    <ImageView
            android:id="@+id/cinemaImageView"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/avatar_2"
            android:contentDescription="@string/cinema_desc"/>
    
    <TextView
            android:id="@+id/cinemaTitleTextView"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/white"
            tools:text="@string/cinema_name"/>
    
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cinemaDetailsButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:typeface="monospace"
            android:textColor="@color/black"
            android:text="@string/detail_hint"/>
    
</LinearLayout>